@model object

@using AutoAdmin.Extensions
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Create</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Products</h4>
        <hr />
        @foreach (var property in Model.GetType().GetProperties())
        {
            <div class="form-group">
                @Html.AutoLabelFor(property, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.AutoEditorFor(property)
                    @Html.ValidationMessageFor(model => model.GetType().GetProperty(property.Name).PropertyType, "", new { @class = "text-danger" })
                </div>
            </div>
        }

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
