@model object
@using AutoAdmin.Mvc.Extensions
@{
    // ViewBag.Title = "Edit";
}

<h2>Edit</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Products</h4>
        <hr />

        @foreach (var property in Model.GetType().GetProperties())
        {


            <div class="form-group">
                @Html.AutoLabelFor(property, htmlAttributes: new { @class = "control-label col-md-2" })
                @*@Html.LabelFor(model => model.GetType().GetProperty(property.Name), htmlAttributes: new { @class = "control-label col-md-2" })*@
                <div class="col-md-10">

                    @Html.AutoEditorFor(property)

                    @Html.AutoValidationMessageFor(property, new { @class = "text-danger" })
                </div>
            </div>
        }

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Edit" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

